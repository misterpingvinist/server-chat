{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es5",
    "experimentalDecorators": true
  },
  "types": [
    "mocha"
 ],
 "typeRoots": [
   "./node_modules/@types"
 ],
  "include": [
    "src/**/*"
],
"exclude": [
    "node_modules",
    "**/*.spec.ts"
]
}
