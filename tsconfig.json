{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "experimentalDecorators": true,
    "strictFunctionTypes": false
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
